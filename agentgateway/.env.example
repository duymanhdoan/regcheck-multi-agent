# AgentGateway Environment Configuration Example
# Copy this file to .env and update with your values

# Service Configuration
SERVICE_NAME=agentgateway
API_PORT=8080
MCP_PORT=8081
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=ap-southeast-1
COGNITO_USER_POOL_ID=ap-southeast-1_XXXXXXXXX
COGNITO_REGION=ap-southeast-1

# Feature Flags
RBAC_ENABLED=true
DEPARTMENT_ISOLATION=true

# Backend Service URLs
APPLICATION_SERVICE_URL=http://application-service.local:8000
MCP_FINANCE_URL=http://mcp-finance-service.local:8080
MCP_HR_URL=http://mcp-hr-service.local:8080
MCP_LEGAL_URL=http://mcp-legal-service.local:8080

# Service Token (for MCP Gateway authentication)
SERVICE_TOKEN=your-secure-service-token-here
